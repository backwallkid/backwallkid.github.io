<div id="main" class="<%= item.layout %>" itemscope itemprop="blogPost">
  <% if (page.layout=='photo' && item.photos && item.photos.length){ %>
    <%- partial('gallery') %>
  <% } %>
	<article itemprop="articleBody"> 
		<%- partial('header') %>
	<div class="article-content">
    <% if(item.unsplash){ %>
	<p>
		<a href="<%= item.unsplash_img_path %>" title="Unsplash" class="fancybox" rel="article0">
			<img src="<%= item.unsplash_img_path %>" alt="Unsplash">
		</a><br>
		<a href="<%= item.unsplash_origin_path %>" target="_blank" rel="external">Photo</a> by <a href="<%= item.unsplash_photographer_link %>" target="_blank" rel="external"><%= item.unsplash_photographer_name %></a>
		 on <a href="https://unsplash.com/" target="_blank" rel="external">Unsplash</a>
	</p>
	<% } %>

		<% if( table&&(item.toc !== false) && theme.toc.article){ %>
		<div id="toc" class="toc-article">
			<strong class="toc-title"><%= __('contents') %></strong>
		<% if(item.list_number == false) {%>
		<%- toc(item.content,{list_number:false}) %>
		<% }else{ %>
			<%- toc(item.content) %>
		<% } %>
		</div>
		<% } %>
		<%- item.content %>  
	</div>
		<%- partial('footer') %>   	       
	</article>
	<%- partial('pagination') %>
	<%- partial('comment') %>
</div>  